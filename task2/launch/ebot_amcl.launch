<?xml version="1.0" encoding="UTF-8"?>
<launch>

<!--including urdf model-->
    <param name="robot_description" command="$(find xacro)/xacro.py '$(find ebot_description)/urdf/ebot.xacro'"/>
<!--publish the state of the robot i.e. tf-->
  <!---->  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

<!--runnning rviz node and opening configured rviz file-->
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find ebot_nav)/rviz/task2.rviz"/>

<!--saving rviz configurations in a rviz folder-->

    <!--<node name="rviz" pkg="rviz" type="rviz"   args=" -d $(find ebot_description)/rviz/visualize.rviz" />-->
    
<!--finds all of the non-fixed joints and publishes a JointState message-->
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" >
        <param name="user_gui" value="True" />
    </node>
    
<!--Serving the static map -->
<arg name="map_file" default="$(find ebot_description)/map/task2.yaml"/>
<node pkg="map_server" type="map_server" name="map_server" args = "$(arg map_file)">
</node>

<!-- Including the AMCL Node-->
<include file="$(find ebot_nav)/launch/load_amcl.launch"/>


</launch>
